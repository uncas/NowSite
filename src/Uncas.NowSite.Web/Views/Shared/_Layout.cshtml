@using StackExchange.Profiling;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="revised" content="@ViewBag.Revised" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <h1>
            @Html.ActionLink("Nu", "Index", "Home")</h1>
        <ul>
            <li>@Html.ActionLink("News", "Index", "BlogPost")</li>
            @if (User.Identity.IsAuthenticated)
            {
                <li>Logged on as @User.Identity.Name</li>
                <li>@Html.ActionLink("Log off", "LogOff", "Authentication")</li>
            }
            else
            {            
                <li>@Html.ActionLink("Log on", "LogOn", "Authentication")</li>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <li>@Html.ActionLink("Create blog post", "Create", "BlogPost")</li>
                <li>@Html.ActionLink("Administrate blog posts", "Admin", "BlogPost")</li>
            }
        </ul>
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
    </div>
  @MiniProfiler.RenderIncludes()
</body>
</html>