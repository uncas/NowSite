@model Uncas.NowSite.Web.Models.ReadModels.BlogPostReadModel
@{
    ViewBag.Title = "Blog post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    @Html.DisplayFor(model => model.Title)</h2>
<fieldset>
    <div class="display-field">
        @Html.DisplayFor(model => model.Content)
    </div>
    <div class="display-label">
        Oprettet
        @Html.DisplayFor(model => model.Created)
    </div>
    <div class="display-label">
        Offentliggjort
        @Html.DisplayFor(model => model.Published)
    </div>
</fieldset>
@foreach (var picture in Model.Pictures)
{
    <a href="@picture.PictureUrl" class="BlogPostPicture">
        <img src="@picture.PictureUrl" alt="Blog post picture" />
    </a>
}
@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { controller = "BlogPost", id = Model.Id })
    </p>
}