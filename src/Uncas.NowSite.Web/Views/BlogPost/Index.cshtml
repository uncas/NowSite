@model IEnumerable<Uncas.NowSite.Web.Models.ReadStores.DeletedBlogPostModel>
@{
    ViewBag.Title = "Deleted blog posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Deleted blog posts</h2>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Content
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Content
            </td>
            <td>
                @using (Html.BeginForm(
                        "Publish",
                        "BlogPost",
                        new { id = item.Id }))
                {
                    <input type="submit" value="Publish" />
                }
            </td>
        </tr>
    }
</table>
